      strip.show();
      
      int currentPixel = 0;      
      for (int j = 0; j < NUMLEDS; j++)  {

        for (int i = 0; i < NUMLEDS; i++)  {

          if (i == currentPixel)  {
            strip.setPixelColor(i,0x00);  
          }
          else  {          
            strip.setPixelColor(i,testBrightness);
          }
        }
        strip.show();
        currentPixel++;
        delay(pauseDuration);
      }
    }
    break;
